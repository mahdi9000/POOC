<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script>
  let dropdown=true;
  $("#toggle").on("click",()=>{
    if(dropdown){
        $(".dropdown").slideDown(500);
        dropdown=false;
    }else{
        $(".dropdown").slideUp(500);
        dropdown=true;
    }
  });
</script>
