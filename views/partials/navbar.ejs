<div class="navbar">
  <span class="title"><%=title%></span>
  <input type="button" class="dropdown-button" id="toggle" style="width: 2%;" value=">">
  <ul class="dropdown" style="display:none;">
      <li>
          <a href="/memes">Memes</a>
      </li>
      <li>
