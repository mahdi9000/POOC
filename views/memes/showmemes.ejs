<!DOCTYPE html>
<html lang="en">
<head>
   <style>
      table {
         border-collapse: collapse;
         width: 100%;
       }
       th, td {
         padding: 8px;
         text-align: center;
         border-bottom: 1px solid #ddd;
       }
       tr:hover {background-color:#f5f5f5;}
       .img-thumbnail {
          width: 100px;
          height: auto;
       }
   </style>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Memes</title>
</head>
   <header>
      <%-include("../partials/navbar",{title:"shitpost"})%>
   </header>
<body>
   <h4><a href="/memes/add">add memes</a></h4>
  <table>
    <th>
       <td>Title</td>
       <td>Author</td>
       <td>image_url</td>
       <td colspan="2">action</td>
    </th>

    <% data.forEach(el => { %> 
    <tr>
       <td><%= el.title %></td>
       <td><%= el.author %></td>
       <td>
          <img class="img-thumbnail" src="<%= el.image_url %>" alt="" srcset="">
       </td>
       <td><a href="/memes/edit/<%= el.id %>">Edit</a></td>
       <td><a href="/memes/delete/<%= el.id %>">Delete</a></td>
    </tr>
    <% }) %> 
 </table>
  
</body>
</html>